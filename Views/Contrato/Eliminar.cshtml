@model Inmobiliaria10.Models.Contrato
@{
    var tipoTxt      = ViewBag.TipoTxt as string ?? "";
    var inmuebleTxt  = ViewBag.InmuebleTxt as string ?? "";
    var inquilinoTxt = ViewBag.InquilinoTxt as string ?? "";

    var inicioTxt    = Model.FechaInicio.ToString("yyyy-MM-dd");
    var finTxt       = Model.FechaFin.ToString("yyyy-MM-dd");
    var rescisionTxt = Model.Rescision.HasValue ? Model.Rescision.Value.ToString("yyyy-MM-dd") : "-";
    var montoTxt     = Model.MontoMulta.HasValue ? Model.MontoMulta.Value.ToString("0.##") : "-";

    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
  <div class="form-card w-100" style="max-width:900px;">
    <div class="form-title">Dar de baja contrato</div>

    <div class="alert alert-warning mb-3">
      Esta acción realizará un <strong>borrado lógico</strong> del contrato: quedará inactivo pero no se eliminará físicamente.
    </div>

    <ul class="list-group list-group-flush mb-3">
      <li class="list-group-item d-flex justify-content-between">
        <span class="fw-semibold">Tipo de inmueble</span><span>@tipoTxt</span>
      </li>
      <li class="list-group-item d-flex justify-content-between">
        <span class="fw-semibold">Inquilino</span><span>@inquilinoTxt</span>
      </li>
      <li class="list-group-item">
        <div class="fw-semibold mb-1">Inmueble (Dirección · Piso · Dpto)</div>
        <div>@inmuebleTxt</div>
      </li>
      <li class="list-group-item d-flex justify-content-between">
        <span class="fw-semibold">Inicio</span><span>@inicioTxt</span>
      </li>
      <li class="list-group-item d-flex justify-content-between">
        <span class="fw-semibold">Fin</span><span>@finTxt</span>
      </li>
      <li class="list-group-item d-flex justify-content-between">
        <span class="fw-semibold">Rescisión</span><span>@rescisionTxt</span>
      </li>
      <li class="list-group-item d-flex justify-content-between">
        <span class="fw-semibold">Monto</span><span>@montoTxt</span>
      </li>
    </ul>

    <!-- Ahora usa .form-delete y data-msg -->
    <form asp-action="Borrar" method="post" class="form-delete text-center"
          data-msg="¿Confirmás dar de baja este contrato? Esta acción es irreversible.">
      @Html.AntiForgeryToken()
      <input type="hidden" name="id" value="@Model.IdContrato" />

      <div class="d-flex justify-content-center gap-3 mt-2">
        <button type="submit" class="btn btn-danger px-4">Dar de baja</button>
        <a asp-action="Detalles" asp-route-id="@Model.IdContrato" class="btn btn-back px-4">Cancelar</a>
      </div>
    </form>
  </div>
</div>
