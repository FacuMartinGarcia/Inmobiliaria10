@model IReadOnlyList<Inmobiliaria10.Models.ContratoAudit>
@{
    ViewData["Title"] = "Auditoría contrato";
    var idContrato = (int)ViewBag.IdContrato;
}

<div class="d-flex justify-content-center py-4">
    <div class="form-card w-100" style="max-width: 1000px;">
        <h1 class="form-title">Auditoría – Contrato #@idContrato</h1>

        @if (Model is null || Model.Count == 0)
        {
            <div class="alert alert-info text-center">No hay eventos de auditoría registrados.</div>
            <div class="text-center">
                <a asp-action="Detalles" asp-route-id="@idContrato" class="btn-back">Volver</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-3">
                    <thead>
                        <tr>
                            <th style="width: 120px;">Fecha</th>
                            <th style="width: 110px;">Acción</th>
                            <th style="width: 110px;">Usuario</th>
                            <th>Datos</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model)
                        {
                            <tr>
                                <td>@e.AccionAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <span class="badge @(e.Accion.ToUpper() switch {
                                        "CREATE" => "text-bg-success",
                                        "UPDATE" => "text-bg-warning",
                                        "DELETE" => "text-bg-danger",
                                        _ => "text-bg-secondary"
                                    })">
                                        @e.Accion
                                    </span>
                                </td>
                                <td>@e.AccionBy</td>
                                <td>
                                    <details>
                                        <summary class="fw-semibold">Ver cambios</summary>
                                        <div class="row g-3 mt-2">
                                            <div class="col-md-6">
                                                <div class="small text-muted mb-1">Antes (old_data)</div>
                                                <pre class="bg-light p-2 rounded" style="white-space:pre-wrap; max-height:260px; overflow:auto;">@e.OldData</pre>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="small text-muted mb-1">Después (new_data)</div>
                                                <pre class="bg-light p-2 rounded" style="white-space:pre-wrap; max-height:260px; overflow:auto;">@e.NewData</pre>
                                            </div>
                                        </div>
                                    </details>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-center gap-2">
                <a asp-action="Detalles" asp-route-id="@idContrato" class="btn-back">Volver</a>
            </div>
        }
    </div>
</div>
