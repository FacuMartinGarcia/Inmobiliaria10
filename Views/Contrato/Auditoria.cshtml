@{
    ViewData["Title"] = "Auditoría de Contratos";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <i class="bi bi-file-earmark-text"></i> Auditoría de Contratos
    </div>

    <form id="filtros" class="row g-2 mb-3 px-3 pt-3">
        <div class="col-md-4">
            <label for="fUsuario" class="form-label">Usuario</label>
            <select id="fUsuario" class="form-select"></select>
        </div>
    </form>

    <div class="card-body">
        <table id="tablaAuditoriaContratos" class="table table-striped table-bordered w-100">
            <thead>
                <tr>
                    <th>Acción</th>
                    <th>Fecha</th>
                    <th>Usuario</th>
                    <th>Datos anteriores</th>
                    <th>Datos nuevos</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/auditoriaContratos.js"></script>
}
