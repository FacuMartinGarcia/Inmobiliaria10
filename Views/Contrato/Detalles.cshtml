@model Inmobiliaria10.Models.Contrato
@{
    ViewData["Title"]="Detalles contrato";
}
<h2 class="mb-3">Detalles contrato #@Model.IdContrato</h2>

<dl class="row">
    <dt class="col-sm-3">Inmueble</dt><dd class="col-sm-9">@Model.IdInmueble</dd>
    <dt class="col-sm-3">Inquilino</dt><dd class="col-sm-9">@Model.IdInquilino</dd>
    <dt class="col-sm-3">Fecha firma</dt><dd class="col-sm-9">@Model.FechaFirma?.ToString("yyyy-MM-dd") ?? "-"</dd>
    <dt class="col-sm-3">Inicio</dt><dd class="col-sm-9">@Model.FechaInicio:yyyy-MM-dd</dd>
    <dt class="col-sm-3">Fin</dt><dd class="col-sm-9">@Model.FechaFin:yyyy-MM-dd</dd>
    <dt class="col-sm-3">Rescisi√≥n</dt><dd class="col-sm-9">@Model.Rescision?.ToString("yyyy-MM-dd") ?? "-"</dd>
    <dt class="col-sm-3">Multa</dt><dd class="col-sm-9">@Model.MontoMulta?.ToString("0.00") ?? "-"</dd>
</dl>

<div class="mt-3">
    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@Model.IdContrato">Editar</a>
    <a class="btn btn-outline-danger" asp-action="Eliminar" asp-route-id="@Model.IdContrato">Eliminar</a>
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</div>
