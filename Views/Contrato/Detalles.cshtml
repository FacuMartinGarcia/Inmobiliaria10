@model Inmobiliaria10.Models.Contrato

@{
    var tipoTxt      = ViewBag.TipoTxt as string ?? "";
    var inmuebleTxt  = ViewBag.InmuebleTxt as string ?? "";
    var inquilinoTxt = ViewBag.InquilinoTxt as string ?? "";

    var inicioTxt    = Model.FechaInicio.ToString("yyyy-MM-dd");
    var finTxt       = Model.FechaFin.ToString("yyyy-MM-dd");
    var rescisionTxt = Model.Rescision.HasValue ? Model.Rescision.Value.ToString("yyyy-MM-dd") : "-";
    var montoTxt     = Model.MontoMulta.HasValue ? Model.MontoMulta.Value.ToString("0.##") : "-";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
  <div class="form-card w-100" style="max-width:900px;">
    <div class="form-title">Detalle del contrato</div>

    <div class="container px-0">
      <div class="row gy-2">
        <div class="col-5 text-end fw-semibold">Tipo de inmueble</div>
        <div class="col-7">@tipoTxt</div>

        <div class="col-5 text-end fw-semibold">Inquilino</div>
        <div class="col-7">@inquilinoTxt</div>

        <div class="col-5 text-end fw-semibold">Inmueble (Direcci贸n 路 Piso 路 Dpto)</div>
        <div class="col-7">@inmuebleTxt</div>

        <div class="col-5 text-end fw-semibold">Inicio</div>
        <div class="col-7">@inicioTxt</div>

        <div class="col-5 text-end fw-semibold">Fin</div>
        <div class="col-7">@finTxt</div>

        <div class="col-5 text-end fw-semibold">Rescisi贸n</div>
        <div class="col-7">@rescisionTxt</div>

        <div class="col-5 text-end fw-semibold">Monto</div>
        <div class="col-7">@montoTxt</div>
      </div>
    </div>
    <div class="d-flex justify-content-center gap-3 mt-4">
      <a asp-action="Index" class="btn btn-back px-4">Volver</a>
      <a asp-action="Editar" asp-route-id="@Model.IdContrato" class="btn btn-save px-4">Editar</a>
      <a asp-action="Baja"   asp-route-id="@Model.IdContrato" class="btn btn-danger px-4">Dar de baja</a>
    </div>

  </div>
</div>
