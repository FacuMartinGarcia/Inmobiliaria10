@model Inmobiliaria10.Models.Contrato
@{
    ViewData["Title"] = "Nuevo contrato";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center py-4">
  <div class="form-card w-100" style="max-width: 900px;">
    <h1 class="form-title">Nuevo contrato</h1>

    <form asp-action="Crear" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row g-3">
          <!-- Inquilino -->
          <div class="col-md-6">
            <label asp-for="IdInquilino" class="form-label">Inquilino</label>
            <select asp-for="IdInquilino" class="form-select"></select>
            <span asp-validation-for="IdInquilino" class="text-danger"></span>
          </div>

          <!-- Inmueble -->
          <div class="col-md-6">
            <label asp-for="IdInmueble" class="form-label">Inmueble</label>
            <select asp-for="IdInmueble" class="form-select"></select>
            <span asp-validation-for="IdInmueble" class="text-danger"></span>
          </div>

          <!-- Fechas -->
          <div class="col-md-3">
              <label asp-for="FechaFirma" class="form-label">Fecha firma</label>
              <input asp-for="FechaFirma" type="date" class="form-control" />
              <span asp-validation-for="FechaFirma" class="text-danger"></span>
          </div>
          <div class="col-md-3">
            <label asp-for="FechaInicio" class="form-label">Fecha inicio</label>
            <input asp-for="FechaInicio" type="date" class="form-control" />
            <span asp-validation-for="FechaInicio" class="text-danger"></span>
          </div>

          <div class="col-md-3">
            <label asp-for="FechaFin" class="form-label">Fecha fin</label>
            <input asp-for="FechaFin" type="date" class="form-control" />
            <span asp-validation-for="FechaFin" class="text-danger"></span>
          </div>

          <div class="col-md-3">
            <label asp-for="MontoMensual" class="form-label">Monto mensual</label>
            <input asp-for="MontoMensual" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="MontoMensual" class="text-danger"></span>
          </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a class="btn btn-back" asp-action="Index"><i class="bi bi-arrow-left"></i> Volver</a>
            <button type="submit" class="btn btn-save"><i class="bi bi-check-lg"></i> Guardar</button>
        </div>
    </form>
  </div>
</div>
@section Scripts {
    <script src="~/js/contrato.js"></script>
}
