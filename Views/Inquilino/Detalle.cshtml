@model Inmobiliaria10.Models.Inquilino

@{
    ViewData["Title"] = "Detalle de Inquilino";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card form-card shadow-sm">
                <div class="card-header form-card-header">
                    <h4 class="form-title">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">

                    <dl class="row">
                        <dt class="col-sm-4">Apellido y Nombre</dt>
                        <dd class="col-sm-8">@Model.ApellidoNombres</dd>

                        <dt class="col-sm-4">Documento</dt>
                        <dd class="col-sm-8">@Model.Documento</dd>

                        <dt class="col-sm-4">Tel√©fono</dt>
                        <dd class="col-sm-8">@Model.Telefono</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Domicilio</dt>
                        <dd class="col-sm-8">@Model.Domicilio</dd>
                    </dl>

                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-left me-2"></i> Volver
                    </a>
                    <div class="btn-group">
                        <a asp-action="Editar" asp-route-id="@Model.IdInquilino" class="btn btn-warning">
                            <i class="fa-solid fa-pen me-2"></i> Editar
                        </a>
                        <a asp-action="Eliminar" asp-route-id="@Model.IdInquilino" class="btn btn-danger">
                            <i class="fa-solid fa-trash me-2"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
