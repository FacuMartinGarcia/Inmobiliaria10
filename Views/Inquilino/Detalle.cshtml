@model Inmobiliaria10.Models.Inquilino

@{
    ViewData["Title"] = "Detalles del Inquilino";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card">
                <h2 class="form-title">@ViewData["Title"]</h2>

                <div class="card-body">
                    <dl class="row mb-4 text-center">
                        <dt class="col-sm-4 fw-bold">Documento</dt>
                        <dd class="col-sm-8">@Model.Documento</dd>

                        <dt class="col-sm-4 fw-bold">Apellido y Nombres</dt>
                        <dd class="col-sm-8">@Model.ApellidoNombres</dd>

                        <dt class="col-sm-4 fw-bold">Domicilio</dt>
                        <dd class="col-sm-8">@Model.Domicilio</dd>

                        <dt class="col-sm-4 fw-bold">Tel√©fono</dt>
                        <dd class="col-sm-8">@Model.Telefono</dd>

                        <dt class="col-sm-4 fw-bold">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-back">
                            <i class="fa-solid fa-arrow-left me-2"></i> Volver
                        </a>
                        <a asp-action="Editar" asp-route-id="@Model.IdInquilino" class="btn btn-save">
                            <i class="fa-solid fa-pen-to-square me-2"></i> Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
