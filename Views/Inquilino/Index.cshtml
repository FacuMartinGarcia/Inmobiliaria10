@model IEnumerable<Inmobiliaria10.Models.Inquilino>

@{
    ViewData["Title"] = "Inquilinos";
    int paginaActual = ViewData["PaginaActual"] != null ? Convert.ToInt32(ViewData["PaginaActual"]) : 1;
    int totalPaginas = ViewData["TotalPaginas"] != null ? Convert.ToInt32(ViewData["TotalPaginas"]) : 1;
    
}

<div class="text-center mb-3">
    <h2 class="fw-bold mb-0" style="color:#e6dabe;">Listado de Inquilinos</h2>
</div>

<form asp-action="Index" method="get" class="mb-3">
    <div class="d-flex justify-content-center mb-3">
        <div class="input-group w-50">
            <input type="text" name="searchString" value="@ViewData["SearchString"]"
                class="form-control"
                autocomplete="off"
                placeholder="Buscar por documento, apellido y nombres..."/>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Crear" class="btn btn-dark">
        <i class="fa-solid fa-plus"></i> Nuevo Inquilino
    </a>
</div>

<table class="table table-hover table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Documento)</th> 
            <th>@Html.DisplayNameFor(m => m.ApellidoNombres)</th> 
            <th>@Html.DisplayNameFor(m => m.Domicilio)</th> 
            <th>@Html.DisplayNameFor(m => m.Telefono)</th> 
            <th>@Html.DisplayNameFor(m => m.Email)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Documento</td>
                    <td>@item.ApellidoNombres</td>
                    <td>@item.Domicilio</td>
                    <td>@item.Telefono</td>
                    <td>@item.Email</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-primary" asp-action="Editar" asp-route-id="@item.IdInquilino" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Borrar" asp-route-id="@item.IdInquilino" title="Borrar">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>                
                        <a class="btn btn-sm btn-info" asp-action="Detalle" asp-route-id="@item.IdInquilino" title="Detalles">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No hay inquilinos registrados</td>
            </tr>
        }
    </tbody>
</table>

@if (totalPaginas > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                <a class="page-link" href="?pagina=@(paginaActual - 1)">« Anterior</a>
            </li>

            @for (int i = 1; i <= totalPaginas; i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link" href="?pagina=@i">@i</a>
                </li>
            }

            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                <a class="page-link" href="?pagina=@(paginaActual + 1)">Siguiente »</a>
            </li>
        </ul>
    </nav>
}

