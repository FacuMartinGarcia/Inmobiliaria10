@model IEnumerable<Inmobiliaria10.Models.Inquilino>

@{
    ViewData["Title"] = "Inquilinos";
}

<h2>Inquilinos</h2>

<p>
    <a asp-action="Crear" class="btn btn-primary">Nuevo Inquilino</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Documento)</th>
            <th>@Html.DisplayNameFor(m => m.ApellidoNombres)</th>
            <th>@Html.DisplayNameFor(m => m.Domicilio)</th>
            <th>@Html.DisplayNameFor(m => m.Telefono)</th>
            <th>@Html.DisplayNameFor(m => m.Email)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Documento</td>
            <td>@item.ApellidoNombres</td>
            <td>@item.Domicilio</td>
            <td>@item.Telefono</td>
            <td>@item.Email</td>
            <td>
                <a class="btn btn-primary" asp-action="Editar" asp-route-id="@item.IdInquilino" title="Editar">
                    <i class="fa-solid fa-pen"></i>
                </a>
				<a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.IdInquilino" title="Borrar">
					<i class="fa-solid fa-trash-can"></i>
				</a>                
                <a class="btn btn-info" asp-action="Detalle" asp-route-id="@item.IdInquilino" title="Detalles">
                    <i class="fa-solid fa-eye"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["Mensaje"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Ã‰xito',
                    text: '@TempData["Mensaje"]'
                });
            </text>
        }
    </script>
}
