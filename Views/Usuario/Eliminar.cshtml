@model Inmobiliaria10.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6"> 
            <div class="card form-card border-danger">
                <div class="card-header form-card-header bg-danger text-white">
                    <h4 class="form-title text-white">@ViewData["Title"]</h4>
                </div>
                <div class="card-body text-center">
                    <h5>Â¿Seguro que deseas eliminar este usuario?</h5>
                    
                    <p class="mt-2">
                        <strong>Nombre:</strong> @Model.ApellidoNombres
                    </p>
                    <p class="mt-2">
                        <strong>Alias:</strong> @Model.Alias
                    </p>
                    <p class="mt-2">
                        <strong>Email:</strong> @Model.Email
                    </p>
                    <p class="mt-2">
                        <strong>Rol:</strong> @Model.Rol?.DenominacionRol
                    </p>

                    <!-- ðŸ”¹ Usa .form-delete y mensaje personalizado -->
                    <form asp-action="Eliminar" method="post" class="form-delete"
                          data-msg="Â¿ConfirmÃ¡s eliminar al usuario '@Model.ApellidoNombres' (@Model.Alias)?">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="IdUsuario" />

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fa-solid fa-arrow-left me-2"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fa-solid fa-trash me-2"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
