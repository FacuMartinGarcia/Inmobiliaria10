@model Inmobiliaria10.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div id="content" class="d-flex justify-content-center align-items-center">
    <div class="form-card">
        <h2 class="form-title">Restablecer Contraseña</h2>
        <p class="form-subtitle">Ingresa tu nueva contraseña y confírmala.</p>

        <!-- Mensajes de TempData -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success">@TempData["Mensaje"]</div>
        }

        <form asp-action="ResetPassword" method="post">
            @* Token oculto para validar *@
            <input type="hidden" asp-for="Token" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="NuevaPassword" class="form-label"></label>
                <input asp-for="NuevaPassword" type="password" class="form-control" placeholder="Nueva contraseña" />
                <span asp-validation-for="NuevaPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmarPassword" class="form-label"></label>
                <input asp-for="ConfirmarPassword" type="password" class="form-control" placeholder="Confirmar contraseña" />
                <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Login" class="btn btn-back">Volver</a>
                <button type="submit" class="btn btn-save">Guardar nueva contraseña</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
