@model IEnumerable<Inmobiliaria10.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
    int paginaActual = ViewBag.PaginaActual != null ? Convert.ToInt32(ViewBag.PaginaActual) : 1;
    int cantidadPorPagina = ViewBag.CantidadPorPagina != null ? Convert.ToInt32(ViewBag.CantidadPorPagina) : 10;
    int totalRegistros = ViewBag.TotalRegistros != null ? Convert.ToInt32(ViewBag.TotalRegistros) : 0;
    int totalPaginas = (int)Math.Ceiling((double)totalRegistros / cantidadPorPagina);
}

<div class="text-center mb-3">
    <h2 class="fw-bold mb-0" style="color:#e6dabe;">Listado de Usuarios</h2>
</div>

<form asp-action="Index" method="get" class="mb-3">
    <div class="d-flex justify-content-center mb-3">
        <div class="input-group w-50">
            <input type="text" name="search" value="@ViewBag.Search"
                class="form-control"
                autocomplete="off"
                placeholder="Buscar usuario por nombre, alias o email..." />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Crear" class="btn btn-dark">
        <i class="fa-solid fa-plus"></i> Nuevo Usuario
    </a>
</div>

<table class="table table-hover table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(m => m.ApellidoNombres)</th>
            <th>@Html.DisplayNameFor(m => m.Alias)</th>
            <th>@Html.DisplayNameFor(m => m.Email)</th>
            <th>Rol</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ApellidoNombres</td>
                    <td>@item.Alias</td>
                    <td>@item.Email</td>
                    <td>@item.Rol?.DenominacionRol</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-primary" asp-action="Editar" asp-route-id="@item.IdUsuario" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Eliminar" asp-route-id="@item.IdUsuario" title="Eliminar">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                        <a class="btn btn-sm btn-info" asp-action="Detalle" asp-route-id="@item.IdUsuario" title="Detalles">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No hay usuarios registrados</td>
            </tr>
        }
    </tbody>
</table>

@if (totalPaginas > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pagina="@(paginaActual - 1)" asp-route-search="@ViewBag.Search">« Anterior</a>
            </li>

            @for (int i = 1; i <= totalPaginas; i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@i" asp-route-search="@ViewBag.Search">@i</a>
                </li>
            }

            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pagina="@(paginaActual + 1)" asp-route-search="@ViewBag.Search">Siguiente »</a>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["Mensaje"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Éxito',
                    text: '@TempData["Mensaje"]',
                });
            </text>
        }
    </script>
}
