@model Inmobiliaria10.Models.Usuario

@{
    ViewData["Title"] = "Nuevo Usuario";
}

<style>
    .form-card {
        max-width: 600px; 
        width: 100%;
    }
</style>

<div class="mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card form-card mx-auto">
                <div class="card-header form-card-header">
                    <h4 class="form-title text-center">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Crear" method="post">
                        
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-8">
                                <label asp-for="IdRol" class="form-label w-100 text-center">Rol</label>
                                <select id="rol" asp-for="IdRol" class="form-select text-center" asp-items="ViewBag.Roles">
                                    <option value="">-- Seleccione Rol --</option>
                                </select>
                                <span asp-validation-for="IdRol" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="ApellidoNombres" class="form-label w-100 text-center">Apellido y Nombres</label>
                                <input asp-for="ApellidoNombres" class="form-control text-center" autocomplete="off"/>
                                <span asp-validation-for="ApellidoNombres" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Alias" class="form-label w-100 text-center">Alias</label>
                                <input asp-for="Alias" class="form-control text-center" autocomplete="off"/>
                                <span asp-validation-for="Alias" class="text-danger"></span>
                            </div>
                        </div>

                         <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Password" class="form-label w-100 text-center">Contrase√±a</label>
                                <input asp-for="Password" type="password" class="form-control text-center" autocomplete="off"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-8">
                                <label asp-for="Email" class="form-label w-100 text-center">Email</label>
                                <input asp-for="Email" class="form-control text-center" autocomplete="off"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fa-solid fa-arrow-left me-2"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-save">
                                <i class="fa-solid fa-floppy-disk me-2"></i> Guardar
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/@@ttskch/select2-bootstrap4-theme@1.5.2/dist/select2-bootstrap4.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function() {
            $('#rol').select2({
                theme: 'bootstrap4',
                placeholder: '-- Seleccione Rol --',
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}
