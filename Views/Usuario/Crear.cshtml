@model Inmobiliaria10.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "_Layout";
}

<body id="page-create-user">
    <div id="content" class="d-flex justify-content-center align-items-center">
        <div class="form-card">
            <h2 class="form-title">Crear Usuario</h2>
            <p class="form-subtitle">Complete los datos para registrar un nuevo usuario</p>

            <form asp-action="Crear" method="post" id="UsuarioForm">
                @* Resumen de errores *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="ApellidoNombres" class="form-label">Apellido, Nombres</label>
                    <input asp-for="ApellidoNombres" class="form-control" autocomplete="off" />
                    <span asp-validation-for="ApellidoNombres" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Alias" class="form-label">Alias</label>
                    <input asp-for="Alias" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Alias" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Contrase√±a</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="IdRol" class="form-label">Rol</label>
                    <select asp-for="IdRol" asp-items="ViewBag.Roles" id="rol" class="form-control"></select>
                    <span asp-validation-for="IdRol" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-back">Cancelar</a>
                    <button type="submit" class="btn btn-save">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    <script src="~/js/usuarios.js" asp-append-version="true"></script>
}
