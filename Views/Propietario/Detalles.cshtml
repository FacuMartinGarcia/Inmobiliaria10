@model Inmobiliaria10.Models.Propietario

@{
    ViewData["Title"] = "Detalles del Propietario";
}

<div class="row justify-content-center">
    <div class="col-md-3">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white text-center">
                <h4 class="card-title">Detalles del Propietario</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Documento</dt>
                    <dd class="col-sm-9">@Model.Documento</dd>

                    <dt class="col-sm-3">Apellido y Nombres</dt>
                    <dd class="col-sm-9">@Model.ApellidoNombres</dd>

                    <dt class="col-sm-3">Domicilio</dt>
                    <dd class="col-sm-9">@Model.Domicilio</dd>

                    <dt class="col-sm-3">Tel√©fono</dt>
                    <dd class="col-sm-9">@Model.Telefono</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>
                </dl>
                
                <div class="mt-3">
                    <a asp-action="Editar" asp-route-id="@Model.IdPropietario" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>