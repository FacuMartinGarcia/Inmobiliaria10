@model Inmobiliaria10.Models.Propietario

@{
    ViewData["Title"] = "Editar Propietario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card">
                <h2 class="form-title">@ViewData["Title"]</h2>

                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        <input type="hidden" asp-for="IdPropietario" />

                        <!-- Documento + Apellido -->
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Documento" class="form-label w-100 text-center"></label>
                                <input asp-for="Documento" class="form-control text-center" autocomplete="off" />
                                <span asp-validation-for="Documento" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ApellidoNombres" class="form-label w-100 text-center"></label>
                                <input asp-for="ApellidoNombres" class="form-control text-center" autocomplete="off" />
                                <span asp-validation-for="ApellidoNombres" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Domicilio -->
                        <div class="mb-3">
                            <label asp-for="Domicilio" class="form-label w-100 text-center"></label>
                            <input asp-for="Domicilio" class="form-control text-center" autocomplete="off" />
                            <span asp-validation-for="Domicilio" class="text-danger"></span>
                        </div>

                        <!-- TelÃ©fono + Email -->
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Telefono" class="form-label w-100 text-center"></label>
                                <input asp-for="Telefono" class="form-control text-center" autocomplete="off" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label w-100 text-center"></label>
                                <input asp-for="Email" class="form-control text-center" autocomplete="off" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-back">Cancelar</a>
                            <button type="submit" class="btn btn-save">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
