@model Inmobiliaria10.Models.Propietario

@{
    ViewData["Title"] = "Editar Propietario";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-warning text-white text-center">
                <h4 class="card-title">Editar Propietario</h4>
            </div>
            <div class="card-body">
                <form asp-action="Editar" method="post">
                    <input type="hidden" asp-for="IdPropietario" />
                    
                    <div class="form-group">
                        <label asp-for="Documento"></label>
                        <input asp-for="Documento" class="form-control" />
                        <span asp-validation-for="Documento" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ApellidoNombres"></label>
                        <input asp-for="ApellidoNombres" class="form-control" />
                        <span asp-validation-for="ApellidoNombres" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Domicilio"></label>
                        <input asp-for="Domicilio" class="form-control" />
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Telefono"></label>
                        <input asp-for="Telefono" class="form-control" />
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    
                    <div class="mt-3">
                         <button type="submit" class="btn btn-success">Guardar</button>
                         <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                   
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}