@{
    var appName = "InnovaPropiedades";
    var isAuth = User?.Identity?.IsAuthenticated ?? false;
    var userName = User?.Identity?.Name ?? "";
}
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @appName</title>
    <link rel="icon" type="image/png" href="~/img/logoOk.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    
          integrity="sha512-SWLK..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    
</head>
<body  id="@ViewData["bodyId"]" class="d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand navbar-light text-white border-bottom box-shadow">
            <div class="container-fluid">

                <!-- Botón para plegar/mostrar sidebar -->
                <button class="btn btn-outline-secondary me-2" id="btnSidebarToggle"
                        type="button" data-bs-toggle="collapse" data-bs-target="#sidebar"
                        aria-controls="sidebar" aria-expanded="false" aria-label="Alternar menú">
                    <i class="fa-solid fa-bars"></i>
                </button>

                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="fw-bold">@appName</span>
                    <img src="~/img/logoOk.png" alt="Logo" style="height:40px;" />
                </a>

                <div class="ms-auto d-flex align-items-center">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="dropdown">
                            <a class="btn btn-outline-light dropdown-toggle d-flex align-items-center gap-2"
                            href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                                @{
                                    var foto = User.FindFirst("Foto")?.Value ?? "/img/user.png";
                                }
                                <img src="@foto" class="rounded-circle" style="width:32px;height:32px;object-fit:cover;" alt="Avatar" />
                                <span>@User.Identity?.Name</span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">Perfil</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Usuario" asp-action="Logout" method="post" class="px-3 py-1">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link p-0 text-danger">Cerrar sesión</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-outline-light" asp-controller="Usuario" asp-action="Login">Iniciar sesión</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid flex-grow-1">
        <div class="row flex-nowrap">
            @if (User?.Identity != null && User.Identity.IsAuthenticated)
            {
            <!-- SIDEBAR (colapsable horizontal) -->
            <nav id="sidebar" class="sidebar collapse collapse-horizontal show d-md-block">
                <div class="sidebar-inner d-flex flex-column h-100">
                    <ul class="nav nav-pills flex-column p-2">
                        <!-- Menús principales -->
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-controller="Propietario" asp-action="Index">
                                <i class="fa-solid fa-user-tie"></i>
                                <span>Propietarios</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-controller="Inquilino" asp-action="Index">
                                <i class="fa-solid fa-people-roof"></i>
                                <span>Inquilinos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-controller="Inmueble" asp-action="Index">
                                <i class="fa-solid fa-building"></i>
                                <span>Inmuebles</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-controller="Contratos" asp-action="Index">
                                <i class="fa-solid fa-file-signature"></i>
                                <span>Contratos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-controller="Pagos" asp-action="Index">
                                <i class="fa-solid fa-dollar-sign"></i>
                                <span>Pagos</span>
                            </a>
                        </li>
                        @if (User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-controller="Usuario" asp-action="Index">
                                <i class="fa-solid fa-users"></i>
                                <span>Usuarios</span>
                            </a>
                        </li>

                        <!-- Submenú Sistema -->
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2 collapsed" 
                            data-bs-toggle="collapse" href="#menuSistema" 
                            role="button" aria-expanded="false" aria-controls="menuSistema">
                                <i class="fa-solid fa-cogs"></i>
                                <span>Sistema</span>
                                <i class="fa-solid fa-chevron-down ms-auto"></i>
                            </a>
                            <div class="collapse" id="menuSistema">
                                <ul class="nav flex-column ms-3">
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Rol" asp-action="Index">
                                            <i class="fa-solid fa-key"></i>
                                            <span>Roles</span>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="InmuebleTipo" asp-action="Index">
                                            <i class="fa-solid fa-building-circle-check"></i>
                                            <span>Tipos de Inmuebles</span>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="InmuebleUso" asp-action="Index">
                                            <i class="fa-solid fa-toolbox"></i>
                                            <span>Usos de Inmuebles</span>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Conceptos" asp-action="Index">
                                            <i class="fa-solid fa-receipt"></i>
                                            <span>Conceptos de Pago</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    }
                    </ul>
                </div>
            </nav>
            <!-- CONTENIDO -->
            <main id="content" class="col py-3"
                style="
                    background:
                    linear-gradient(rgba(0,0,0,.25), rgba(0,0,0,.25)),
                    url('/img/edificio1.webp') center/cover no-repeat;
                    min-height: 100vh;">
                @RenderBody()
            </main>
            }
            else
            {
               <main id="content" class="col py-3"
                style="
                    background:
                    linear-gradient(rgba(0,0,0,.25), rgba(0,0,0,.25)),
                    url('/img/edificio1.webp') center/cover no-repeat;
                    min-height: 100vh;">
                @RenderBody()
            </main>
            }
        </div>
    </div>
    
    <input type="hidden" id="mensajeTemp" value="@TempData["Ok"]" />
    <input type="hidden" id="errorTemp"   value="@TempData["Err"]" />
    <input type="hidden" id="infoTemp"    value="@TempData["Info"]" />

    
    <footer class="bg-dark text-white text-center py-3 mt-auto shadow-sm">
        <div class="container">
            <p class="mb-0">© @DateTime.Now.Year - InnovaPropiedades | Todos los derechos reservados</p>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap (usa jQuery) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css"/> 
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>

    <!-- Select2 + tema Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/@@ttskch/select2-bootstrap4-theme@1.5.2/dist/select2-bootstrap4.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.full.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Validaciones jQuery -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- Scripts propios -->
   

    <script src="~/js/layout.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <!-- TempData para SweetAlert2 -->
    @if (TempData["Mensaje"] != null)
    {
        <input type="hidden" id="mensajeTemp" value="@TempData["Mensaje"]" />
    }
    @if (TempData["Error"] != null)
    {
        <input type="hidden" id="errorTemp" value="@TempData["Error"]" />
    }
    @if (TempData["Info"] != null)
    {
        <input type="hidden" id="infoTemp" value="@TempData["Info"]" />
    }

</body>
</html>
