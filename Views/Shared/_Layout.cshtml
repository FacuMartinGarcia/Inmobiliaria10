@{
    var appName = "InnovaPropiedades";
    var isAuth = User?.Identity?.IsAuthenticated ?? false;
    var userName = User?.Identity?.Name ?? "";
}
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @appName</title>
    <link rel="icon" type="image/png" href="~/img/logoOk.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SWLK..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inmobiliaria10.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand navbar-light text-white border-bottom box-shadow">
            <div class="container-fluid">

                <!-- Botón para plegar/mostrar sidebar -->
                <button class="btn btn-outline-secondary me-2" id="btnSidebarToggle"
                        type="button" data-bs-toggle="collapse" data-bs-target="#sidebar"
                        aria-controls="sidebar" aria-expanded="false" aria-label="Alternar menú">
                    <i class="fa-solid fa-bars"></i>
                </button>

                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="fw-bold">@appName</span>
                    <img src="~/img/logoOk.png" alt="Logo" style="height:40px;" />
                </a>

                <div class="ms-auto d-flex align-items-center">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="dropdown">
                            <a class="btn btn-outline-light dropdown-toggle d-flex align-items-center gap-2"
                            href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                                @{
                                    var foto = User.FindFirst("Foto")?.Value ?? "/img/user.png";
                                }
                                <img src="@foto" class="rounded-circle" style="width:32px;height:32px;object-fit:cover;" alt="Avatar" />
                                <span>@User.Identity?.Name</span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">Perfil</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Usuario" asp-action="Logout" method="post" class="px-3 py-1">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link p-0 text-danger">Cerrar sesión</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-outline-light" asp-controller="Usuario" asp-action="Login">Iniciar sesión</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTENEDOR PRINCIPAL CON SIDEBAR + CONTENT -->
    <div class="container-fluid flex-grow-1">
        <div class="row flex-nowrap">

            <!-- SIDEBAR (colapsable horizontal) -->
            <nav id="sidebar" class="sidebar collapse collapse-horizontal show d-md-block">
                <div class="sidebar-inner d-flex flex-column h-100">
                    <ul class="nav nav-pills flex-column p-2">
                        <!-- Menús existentes -->
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-controller="Propietario" asp-action="Index">
                                <i class="fa-solid fa-user-tie"></i>
                                <span>Propietarios</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-controller="Inquilino" asp-action="Index">
                                <i class="fa-solid fa-users"></i>
                                <span>Inquilinos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-controller="Inmueble" asp-action="Index">
                                <i class="fa-solid fa-building"></i>
                                <span>Inmuebles</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-controller="Contratos" asp-action="Index">
                                <i class="fa-solid fa-file-signature"></i>
                                <span>Contratos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2" asp-controller="Pagos" asp-action="Index">
                                <i class="fa-solid fa-receipt"></i>
                                <span>Pagos</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-2 collapsed" data-bs-toggle="collapse" href="#menuSistema" role="button" aria-expanded="false" aria-controls="menuSistema">
                                <i class="fa-solid fa-cogs"></i>
                                <span>Sistema</span>
                                <i class="fa-solid fa-chevron-down ms-auto"></i>
                            </a>
                            <div class="collapse" id="menuSistema">
                                <ul class="nav flex-column ms-3">
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Rol" asp-action="Index">Roles</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="InmuebleTipo" asp-action="Index">Tipos de Inmuebles</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="InmuebleUso" asp-action="Index">Usos de Inmuebles</a>
                                    </li>
                                    <li class="nav-item"></li>
                                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Conceptos" asp-action="Index">Conceptos de Pago</a>
                                    </li>

                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- CONTENIDO -->
            <main id="content" class="col py-3"
                style="
                    background:
                    linear-gradient(rgba(0,0,0,.25), rgba(0,0,0,.25)),
                    url('/img/edificio1.webp') center/cover no-repeat;
                    min-height: 100vh;">
                @RenderBody()
            </main>

        </div>
    </div>

    <!-- FOOTER (opcional si querés uno global) -->
    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; @DateTime.Now.Year - @appName -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>


    <script>
        (function () {
            const sidebar = document.getElementById('sidebar');
            const btn = document.getElementById('btnSidebarToggle');
            const key = 'sidebar-collapsed';

            const wasCollapsed = localStorage.getItem(key) === 'true';
            if (wasCollapsed) {

                sidebar.classList.remove('show');
            }


            btn?.addEventListener('click', function () {
                const willBeCollapsed = sidebar.classList.contains('show'); 

                setTimeout(() => {
                    localStorage.setItem(key, String(!willBeCollapsed));
                }, 350);
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
