@model Inmobiliaria10.Models.Inmueble

@{
    ViewData["Title"] = "Imágenes del Inmueble";
    var Id = Model?.IdInmueble ?? 0;
}

<div class="mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card form-card mx-auto shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="form-title mb-0">
                        <i class="fa-solid fa-image me-2"></i> @ViewData["Title"]
                    </h4>
                </div>

                <div class="card-body">
                    <h5 class="mb-3 text-center">Portada del Inmueble: <strong>@Model?.Direccion</strong></h5>

                    <div class="row">
                        <div class="col-md-12 text-center">
                            @if (!string.IsNullOrEmpty(Model?.Portada))
                            {
                                <div class="mb-3">
                                    <img src="@Model.Portada" class="img-thumbnail mb-3 shadow" style="max-width: 80%;" />
                                    <form asp-action="EliminarPortada" method="post" class="d-inline">
                                        <input type="hidden" name="InmuebleId" value="@Id" />
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa-solid fa-trash-alt me-2"></i>Eliminar Portada
                                        </button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">No hay portada asignada.</div>
                            }
                        </div>
                    </div>

                    <hr />

                    <form asp-action="Portada" method="post" enctype="multipart/form-data" class="mt-3">
                        <div class="mb-3 text-center">
                            <label for="Archivo" class="form-label fw-bold">Seleccionar nueva portada</label>
                            <input type="file" class="form-control text-center" id="Archivo" name="Archivo" accept="image/*" required />
                            <input type="hidden" name="InmuebleId" value="@Id" />
                        </div>
                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="fa-solid fa-arrow-left me-2"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-upload me-2"></i> Subir
                            </button>
                        </div>
                    </form>
                </div>
            </div>


            <div class="card form-card mx-auto mt-4 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-images me-2"></i> Imágenes del Interior del Inmueble
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted text-center">Aquí se mostrarán y cargarán las fotos interiores...</p>

                </div>
            </div>
        </div>
    </div>
</div>
