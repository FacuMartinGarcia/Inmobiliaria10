@model Inmobiliaria10.Models.Inmueble

@{
    ViewData["Title"] = "Imágenes del Inmueble";
    var Id = Model?.IdInmueble ?? 0;
}

<div class="container mt-5">

    <div class="row justify-content-center g-4">

        <!-- Card de Portada -->
        <div class="col-12 col-lg-6 d-flex justify-content-center">
            <div class="card form-card w-100">
                <div class="card-header text-black d-flex justify-content-center align-items-center">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-images me-2"></i>Imágen de Portada del Inmueble
                    </h5>
                </div>
                <div class="card-body text-center">
                    <h5 class="mb-3">
                        <strong>
                        @(
                            $"{Model?.Direccion ?? "Sin Dirección"}" +
                            $"{(string.IsNullOrEmpty(Model?.Piso) ? "" : " - Piso " + Model?.Piso)}" +
                            $"{(string.IsNullOrEmpty(Model?.Depto) ? "" : " - Depto " + Model?.Depto)}"
                        )
                        </strong>
                    </h5>
                    @if (!string.IsNullOrEmpty(Model?.Portada))
                    {
                        <div class="mb-3">
                            <img src="@Model?.Portada" class="img-thumbnail mb-3 shadow" style="width: 100%; max-width: 100%; object-fit: cover;" />
                            <form asp-action="EliminarPortada" method="post" class="d-inline eliminar-portada w-100">
                                <input type="hidden" name="InmuebleId" value="@Id" />
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="fa-solid fa-trash-alt me-2"></i>Eliminar Portada
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">No hay imágen de portada asignada.</div>
                    }


                    <form asp-action="Portada" method="post" enctype="multipart/form-data" class="mt-3 d-flex align-items-center gap-2">
                        <label class="btn btn-secondary mb-0">
                            Seleccionar archivo
                            <input type="file" class="d-none" id="Archivo" name="Archivo" accept="image/*" required />
                        </label>
                        <span id="nombreArchivoSeleccionado" class="text-truncate flex-grow-1">Ningún archivo seleccionado</span>
                        <button type="submit" class="btn btn-dark">
                            <i class="fa-solid fa-upload me-2"></i>Subir Portada
                        </button>

                        <input type="hidden" name="InmuebleId" value="@Id" />
                    </form>
                    <div class="mt-3 d-flex justify-content-center">
                        <a asp-action="Index" class="btn btn-back">
                            <i class="fa-solid fa-arrow-left me-2"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card de Imágenes del Interior -->
        <div class="col-12 col-lg-6 d-flex justify-content-center">
            <div class="card form-card w-100 shadow-sm">
                <div class="card-header text-black d-flex justify-content-center align-items-center">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-images me-2"></i>Imágenes del Interior del Inmueble
                    </h5>
                </div>
                <div class="card-body text-center">
                    <form asp-controller="Imagenes" asp-action="Alta" method="post" enctype="multipart/form-data" class="mb-3 d-flex align-items-center gap-2">
                        <label class="btn btn-secondary mb-0">
                            Elegir archivos
                            <input type="file" class="d-none" id="imagenes" name="imagenes" accept="image/*" multiple required />
                        </label>
                        <input type="hidden" name="id" value="@Id" />
                        <span id="archivosSeleccionados" class="text-truncate flex-grow-1">Ningún archivo seleccionado</span>
                        <button type="submit" class="btn btn-dark">
                            <i class="fa-solid fa-upload me-2"></i>Subir Imágenes
                        </button>
                    </form>

                    <div class="row g-3 mt-3 justify-content-center">
                        @if (Model?.Imagenes?.Any() == true)
                        {
                            foreach (var img in Model.Imagenes)
                            {
                                    <div class="col-6 col-md-4 col-lg-6 d-flex justify-content-center">
                                    <div class="card shadow-sm w-100">
                                        <img src="@img.Url" class="card-img-top img-fluid rounded" style="max-height:150px; object-fit:cover;" />
                                        <div class="card-body p-2">
                                            <form asp-controller="Imagenes" asp-action="Eliminar" method="post" class="eliminar-imagen">
                                                <input type="hidden" name="id" value="@img.IdImagen" />
                                                <button type="submit" class="btn btn-sm btn-danger w-100">
                                                    <i class="fa-solid fa-trash me-1"></i>Eliminar
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="alert alert-warning text-center">
                                    No hay imágenes del interior del inmueble cargadas.
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script>
        window.mensajeOk = "@Html.Raw(TempData["Mensaje"])";
        window.mensajeErr = "@Html.Raw(TempData["MensajeError"])";
    </script>
    <script src="~/js/imagenes.js" asp-append-version="true"></script>
}
