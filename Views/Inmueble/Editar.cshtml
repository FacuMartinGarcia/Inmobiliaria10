@model Inmobiliaria10.Models.Inmueble

@{
    ViewData["Title"] = "Editar Inmueble";
}
<style>
    .form-card {
        max-width: 1200px;  
        width: 100%;
    }
</style>

<div class="margin: auto mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card form-card mx-auto">
                <div class="card-header form-card-header">
                    <h4 class="form-title">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        <input type="hidden" asp-for="IdInmueble" />

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="IdPropietario" class="form-label w-100 text-center">Propietario</label>
                                <select id="propietario" asp-for="IdPropietario" class="form-select text-center" asp-items="ViewBag.Propietarios"></select>
                                <span asp-validation-for="IdPropietario" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="IdTipo" class="form-label w-100 text-center">Tipo</label>
                                <select id="tipo" asp-for="IdTipo" class="form-select text-center" asp-items="ViewBag.Tipos"></select>
                                <span asp-validation-for="IdTipo" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="IdUso" class="form-label w-100 text-center">Uso</label>
                                <select id="uso" asp-for="IdUso" class="form-select text-center" asp-items="ViewBag.Usos"></select>
                                <span asp-validation-for="IdUso" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Ambientes" class="form-label w-100 text-center">Ambientes</label>
                                <input asp-for="Ambientes" type="number" class="form-control text-center" min="1"/>
                                <span asp-validation-for="Ambientes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Direccion" class="form-label w-100 text-center"></label>
                                <input asp-for="Direccion" class="form-control text-center"/>
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                            <div class="col-md-1">
                                <label asp-for="Piso" class="form-label w-100 text-center"></label>
                                <input asp-for="Piso" class="form-control text-center"/>
                                <span asp-validation-for="Piso" class="text-danger"></span>
                            </div>
                            <div class="col-md-1">
                                <label asp-for="Depto" class="form-label w-100 text-center"></label>
                                <input asp-for="Depto" class="form-control text-center"/>
                                <span asp-validation-for="Depto" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Lat" class="form-label w-100 text-center">Lat. Geog.</label>
                                <input asp-for="Lat" type="number" step="0.000001" class="form-control text-center"/>
                                <span asp-validation-for="Lat" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Lon" class="form-label w-100 text-center">Long. Geog.</label>
                                <input asp-for="Lon" type="number" step="0.000001" class="form-control text-center"/>
                                <span asp-validation-for="Lon" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 ms-auto">
                                <label asp-for="Precio" class="form-label w-100 text-center"></label>
                                <input asp-for="Precio" type="number" class="form-control text-center"/>
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card border mt-3" style="background-color: rgb(156, 155, 105);">
                            <div class="card-body text-center">
                                <div class="form-check d-inline-block">
                                    <input asp-for="Activo" class="form-check-input" type="checkbox"/>
                                    <label asp-for="Activo" class="form-check-label ms-2">ACTIVO</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fa-solid fa-arrow-left me-2"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-save">
                                <i class="fa-solid fa-floppy-disk me-2"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/@@ttskch/select2-bootstrap4-theme@1.5.2/dist/select2-bootstrap4.min.css" rel="stylesheet" />


    <script>
        $(document).ready(function() {
            $('#propietario').select2({
                theme: 'bootstrap4',
                placeholder: '-- Seleccione Propietario --',
                allowClear: true,
                width: '100%'
            });

            $('#tipo').select2({
                theme: 'bootstrap4',
                placeholder: '-- Seleccione Tipo --',
                allowClear: true,
                width: '100%'
            });

            $('#uso').select2({
                theme: 'bootstrap4',
                placeholder: '-- Seleccione Uso --',
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}
