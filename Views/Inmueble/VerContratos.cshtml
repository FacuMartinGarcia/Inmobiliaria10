@model IEnumerable<Inmobiliaria10.Models.Contrato>

@{
    ViewData["Title"] = "Contratos del Inmueble";
    Layout = "_Layout";

    var inmueble = ViewBag.Inmueble as Inmobiliaria10.Models.Inmueble;
}

<div class="text-center mb-3">
    <h2 class="fw-bold mb-0" style="color:#e6dabe;">
        Contratos de @inmueble?.Direccion
    </h2>
    <p class="fw-bold mb-0" style="color:#e6dabe;">
        @Model?.Count() Contratos Registrados
    </p>
</div>

<div class="mb-3">
    <a class="btn btn-secondary" asp-controller="Inmueble" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i> Volver a Inmuebles
    </a>
</div>

<table class="table table-hover table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(m => m.FechaFirma)</th>
            <th>@Html.DisplayNameFor(m => m.FechaInicio)</th>
            <th>@Html.DisplayNameFor(m => m.FechaFin)</th>
            <th>@Html.DisplayNameFor(m => m.MontoMensual)</th>
            <th>Inquilino</th>
            <th>DNI</th>
            <th>@Html.DisplayNameFor(m => m.Rescision)</th>
            <th>@Html.DisplayNameFor(m => m.MontoMulta)</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var contrato in Model)
            {
                <tr>
                    <td>@contrato.FechaFirma?.ToShortDateString()</td>
                    <td>@contrato.FechaInicio.ToShortDateString()</td>
                    <td>@contrato.FechaFin.ToShortDateString()</td>
                    <td>@contrato.MontoMensual.ToString("C")</td>
                    <td>@contrato.Inquilino?.ApellidoNombres</td>
                    <td>@contrato.Inquilino?.Documento</td>
                    <td>
                        @if (contrato.Rescision.HasValue)
                        {
                            @contrato.Rescision.Value.ToShortDateString()
                        }
                        else
                        {
                            <span class="text-muted">Sin Rescisi√≥n</span>
                        }
                    </td>
                    <td>
                        @if (contrato.MontoMulta.HasValue)
                        {
                            @contrato.MontoMulta.Value.ToString("C")
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted">
                    No hay contratos registrados para este inmueble
                </td>
            </tr>
        }
    </tbody>
</table>
