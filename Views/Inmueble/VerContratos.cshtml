@model IEnumerable<Inmobiliaria10.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
    Layout = "_Layout";
    int paginaActual = ViewData["PaginaActual"] != null ? Convert.ToInt32(ViewData["PaginaActual"]) : 1;
    int totalPaginas = ViewData["TotalPaginas"] != null ? Convert.ToInt32(ViewData["TotalPaginas"]) : 1;
}

<div class="text-center mb-3">
    <h2 class="fw-bold mb-0" style="color:#e6dabe;">Listado de Inmuebles</h2>
</div>

<form asp-action="Index" method="get" class="mb-3">
    <div class="d-flex justify-content-center mb-3">
        <div class="input-group w-50">
            <input type="text" name="searchString" value="@ViewData["SearchString"]"
                   class="form-control"
                   autocomplete="off"
                   placeholder="Buscar inmueble por dirección, tipo o nombre del propietario..." />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Crear" class="btn btn-dark">
        <i class="fa-solid fa-plus"></i> Nuevo Inmueble
    </a>
</div>

<table class="table table-hover table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Direccion)</th>
            <th>@Html.DisplayNameFor(m => m.Piso)</th>
            <th>@Html.DisplayNameFor(m => m.Depto)</th>
            <th>Uso</th>
            <th>Tipo</th>
            <th>@Html.DisplayNameFor(m => m.Ambientes)</th>
            <th>@Html.DisplayNameFor(m => m.Precio)</th>
            <th>@Html.DisplayNameFor(m => m.Propietario)</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Direccion</td>
                    <td>@item.Piso</td>
                    <td>@item.Depto</td>
                    <td>@item.Uso?.DenominacionUso</td>
                    <td>@item.Tipo?.DenominacionTipo</td>
                    <td>@item.Ambientes</td>
                    <td>@item.Precio?.ToString("C")</td>
                    <td>@item.Propietario?.ApellidoNombres</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center text-muted">No hay inmuebles registrados</td>
            </tr>
        }
    </tbody>
</table>

@if (totalPaginas > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pagina="@(paginaActual - 1)" asp-route-searchString="@ViewData["SearchString"]">« Anterior</a>
            </li>

            @for (int i = 1; i <= totalPaginas; i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@i" asp-route-searchString="@ViewData["SearchString"]">@i</a>
                </li>
            }

            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pagina="@(paginaActual + 1)" asp-route-searchString="@ViewData["SearchString"]">Siguiente »</a>
            </li>
        </ul>
    </nav>
}
