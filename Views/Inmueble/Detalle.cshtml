@model Inmobiliaria10.Models.Inmueble

@{
    ViewData["Title"] = "Detalles del Inmueble";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card form-card">
                <h2 class="form-title">@ViewData["Title"]</h2>

                <div class="card-body">
                    <dl class="row mb-4 text-center">
                        <dt class="col-sm-4 fw-bold">Dirección</dt>
                        <dd class="col-sm-8">@Model.Direccion</dd>

                        <dt class="col-sm-4 fw-bold">Precio</dt>
                        <dd class="col-sm-8">$@Model.Precio</dd>

                        <dt class="col-sm-4 fw-bold">Uso</dt>
                        <dd class="col-sm-8">@Model.Uso?.DenominacionUso</dd>

                        <dt class="col-sm-4 fw-bold">Tipo</dt>
                        <dd class="col-sm-8">@Model.Tipo?.DenominacionTipo</dd>

                        <dt class="col-sm-4 fw-bold">Propietario</dt>
                        <dd class="col-sm-8">@Model.Propietario?.ApellidoNombres</dd>

                        <dt class="col-sm-4 fw-bold">Documento</dt>
                        <dd class="col-sm-8">@Model.Propietario?.Documento</dd>

                        <dt class="col-sm-4 fw-bold">Teléfono</dt>
                        <dd class="col-sm-8">@Model.Propietario?.Telefono</dd>

                        <dt class="col-sm-4 fw-bold">Email</dt>
                        <dd class="col-sm-8">@Model.Propietario?.Email</dd>
                    </dl>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-back">
                            <i class="fa-solid fa-arrow-left me-2"></i> Volver
                        </a>
                        <a asp-action="Editar" asp-route-id="@Model.IdInmueble" class="btn btn-save">
                            <i class="fa-solid fa-pen-to-square me-2"></i> Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
