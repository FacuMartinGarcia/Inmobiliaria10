@model Inmobiliaria10.Models.ViewModels.PagoDetalleViewModel
@{
    ViewData["Title"] = "Detalles del Pago";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card form-card w-75">
        <div class="card-header form-card-header">
            <h4 class="form-title text-center">@ViewData["Title"]</h4>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Contrato</dt>
                <dd class="col-sm-8">@Model.ContratoTexto</dd>

                <dt class="col-sm-4">Fecha de pago</dt>
                <dd class="col-sm-8">@Model.FechaPago.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Mes</dt>
                <dd class="col-sm-8">@Model.MesTexto</dd>

                <dt class="col-sm-4">Año</dt>
                <dd class="col-sm-8">@Model.Anio</dd>

                <dt class="col-sm-4">Concepto</dt>
                <dd class="col-sm-8">@Model.ConceptoTexto</dd>

                <dt class="col-sm-4">Detalle</dt>
                <dd class="col-sm-8">@Model.Detalle</dd>

                <dt class="col-sm-4">Importe</dt>
                <dd class="col-sm-8">@Model.Importe.ToString("C")</dd>

                <dt class="col-sm-4">Número de Pago</dt>
                <dd class="col-sm-8">@Model.NumeroPago</dd>

                <dt class="col-sm-4">Creado por</dt>
                <dd class="col-sm-8">@Model.CreatedByAlias</dd>

                <dt class="col-sm-4">Fecha creación</dt>
                <dd class="col-sm-8">
                    @(Model.CreatedAt.HasValue ? Model.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")
                </dd>

                <dt class="col-sm-4">Anulado por</dt>
                <dd class="col-sm-8">@Model.DeletedByAlias</dd>

                <dt class="col-sm-4">Fecha anulación</dt>
                <dd class="col-sm-8">
                    @(Model.DeletedAt.HasValue ? Model.DeletedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")
                </dd>

                <dt class="col-sm-4">Motivo de anulación</dt>
                <dd class="col-sm-8">@Model.MotivoAnulacion</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
            <a asp-action="Editar" asp-route-id="@Model.IdPago" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Editar
            </a>
        </div>
    </div>
</div>
