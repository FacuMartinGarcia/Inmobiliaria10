@model Inmobiliaria10.Models.Pago
@{
    ViewData["Title"] = "Multa por rescisión";
    Layout = "_Layout";
}

<body id="page-create-multa">
    <div class="d-flex justify-content-center py-4">
        <div class="form-card">
            <div class="form-title">Registrar multa por rescisión</div>

            <form asp-action="Multa" asp-route-idContrato="@Model.IdContrato" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="IdContrato" />

                <div class="mb-3">
                    <label class="form-label">Contrato</label>
                    <input class="form-control" value="@ViewBag.ContratoTexto" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="FechaPago" class="form-label"></label>
                    <input asp-for="FechaPago" class="form-control" type="date" />
                    <span asp-validation-for="FechaPago" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Importe" class="form-label"></label>
                    <input asp-for="Importe" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Importe" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Detalle" class="form-label"></label>
                    <textarea asp-for="Detalle" class="form-control"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="IdConcepto" class="form-label"></label>
                    <select asp-for="IdConcepto" asp-items="ViewBag.Conceptos" class="form-select"></select>
                    <span asp-validation-for="IdConcepto" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-exclamation-triangle"></i> Guardar multa
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    <script src="~/js/pagos.js" asp-append-version="true"></script>
}
