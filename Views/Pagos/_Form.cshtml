@model Inmobiliaria10.Models.Pago

<div class="row g-3">
   <!-- Contrato -->
   @if (Model.IdPago == 0)  {   <!-- Crear -->
        <div class="col-md-12">
            <label asp-for="IdContrato" class="form-label">Contrato</label>
            <input asp-for="IdContrato" type="hidden" class="form-control" />
            <span asp-validation-for="IdContrato" class="text-danger"></span>
        </div>
   } else {   <!-- Editar -->
        <div class="col-md-12">
            <label class="form-label">Contrato</label>
            <input value="@ViewBag.ContratoTexto" class="form-control" readonly />
        </div>
   }

   <div class="col-md-4">
        <label asp-for="FechaPago" class="form-label">Fecha de pago</label>
        <input asp-for="FechaPago" type="date" class="form-control" />
        <span asp-validation-for="FechaPago" class="text-danger"></span>
   </div>

   <div class="col-md-4">
        <label class="form-label">Mes</label>
        <input value="@(Model.IdMes.HasValue ? System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.IdMes.Value) : "")" 
               class="form-control" readonly />
   </div>

   <div class="col-md-4">
        <label asp-for="Anio" class="form-label">Año</label>
        <input asp-for="Anio" class="form-control" readonly />
   </div>

   <div class="col-md-6">
        <label asp-for="Importe" class="form-label">Importe</label>
        <input asp-for="Importe" type="number" step="0.01" class="form-control" placeholder="0,00" autocomplete="off" />
        <span asp-validation-for="Importe" class="text-danger"></span>
   </div>

   <div class="form-group col-md-6">
        <label asp-for="IdConcepto" class="form-label">Concepto</label>
        <select asp-for="IdConcepto" class="form-control select2" asp-items="ViewBag.Conceptos">
            <option value="">-- Seleccione un concepto --</option>
        </select>
        <span asp-validation-for="IdConcepto" class="text-danger"></span>
   </div>

   <div class="mb-3">
        <label asp-for="Detalle" class="form-label">Detalle</label>
        <textarea asp-for="Detalle" class="form-control"></textarea>
        <span asp-validation-for="Detalle" class="text-danger"></span>
   </div>

   <div class="col-12">
        <label asp-for="MotivoAnulacion" class="form-label">Motivo de anulación (opcional)</label>
        <textarea asp-for="MotivoAnulacion" class="form-control" rows="2" placeholder="Completar solo si corresponde"></textarea>
        <span asp-validation-for="MotivoAnulacion" class="text-danger"></span>
   </div>
</div>
