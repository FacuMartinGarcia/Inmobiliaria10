@model Inmobiliaria10.Models.Pago
@{
    ViewData["Title"] = "Editar pago";
    ViewData["bodyId"] = "page-edit-pago";   // usado en pagos.js
}

<div class="d-flex justify-content-center py-4">
  <div class="form-card">
    <h2 class="form-title">Editar pago</h2>

    <form asp-action="Editar" asp-route-id="@Model.IdPago" asp-controller="Pagos" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="IdPago" type="hidden" />
        <input asp-for="IdContrato" type="hidden" />
        <input asp-for="FechaPago" type="hidden" />
        <input asp-for="IdMes" type="hidden" />
        <input asp-for="Anio" type="hidden" />
        <input asp-for="Importe" type="hidden" />

      <!-- Contrato (solo lectura) -->
      <div class="mb-3">
        <label class="form-label">Contrato</label>
        <input value="@ViewBag.ContratoTexto" class="form-control" readonly />
      </div>

      <!-- Fecha / Mes / Año (solo lectura) -->
      <div class="row g-3">
        <div class="col-md-4">
          <label asp-for="FechaPago" class="form-label">Fecha de pago</label>
          <input value="@Model.FechaPago.ToString("dd/MM/yyyy")" class="form-control" readonly />
        </div>
        <div class="col-md-4">
          <label class="form-label">Mes</label>
          <input value="@ViewBag.MesTexto" class="form-control" readonly />
        </div>
        <div class="col-md-4">
          <label class="form-label">Año</label>
          <input value="@ViewBag.AnioTexto" class="form-control" readonly />
        </div>
      </div>

      <!-- Importe (solo lectura) -->
      <div class="mb-3 mt-3">
        <label asp-for="Importe" class="form-label">Importe</label>
        <input value="@Model.Importe" class="form-control" readonly />
      </div>

      <!-- Concepto (editable) -->
      <div class="mb-3">
        <label asp-for="IdConcepto" class="form-label">Concepto</label>
        <select asp-for="IdConcepto" asp-items="ViewBag.Conceptos" class="form-select"></select>
        <span asp-validation-for="IdConcepto" class="text-danger"></span>
      </div>

      <!-- Detalle (editable) -->
      <div class="mb-3">
        <label asp-for="Detalle" class="form-label">Detalle</label>
        <textarea asp-for="Detalle" class="form-control"></textarea>
        <span asp-validation-for="Detalle" class="text-danger"></span>
      </div>

      <!-- Motivo de anulación (editable) -->
      <div class="mb-3">
        <label asp-for="MotivoAnulacion" class="form-label">Motivo de anulación (opcional)</label>
        <textarea asp-for="MotivoAnulacion" class="form-control"></textarea>
        <span asp-validation-for="MotivoAnulacion" class="text-danger"></span>
      </div>

      <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-back">← Volver</a>
        <button type="submit" class="btn btn-save">✓ Guardar cambios</button>
      </div>
    </form>
  </div>
</div>

@section Scripts {
    <script src="~/js/pagos.js" asp-append-version="true"></script>
}
