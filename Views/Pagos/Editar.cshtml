@model Inmobiliaria10.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
    ViewData["BodyId"] = "page-edit-pago";
}

<div class="mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card form-card mx-auto">
                <div class="card-header form-card-header">
                    <h4 class="form-title">@ViewData["Title"]</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        @* Id oculto *@
                        <input type="hidden" asp-for="IdPago" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <partial name="_Form" />

                        <div class="mt-3 d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-back">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-save">
                                <i class="bi bi-check-lg"></i> Guardar cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pagos.js"></script>
}
