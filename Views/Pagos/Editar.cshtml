@model Inmobiliaria10.Models.Pago
@{
    ViewData["Title"] = "Editar pago";
    Layout = "_Layout";
}

<body id="page-edit-pago">
    <div class="d-flex justify-content-center py-4">
        <div class="form-card">
            <div class="form-title">Editar pago</div>

            <form asp-action="Editar" asp-route-id="@Model.IdPago" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="IdPago" />

                <dl class="row">
                    <dt class="col-sm-3">Fecha</dt>
                    <dd class="col-sm-9">
                        <input value="@Model.FechaPago.ToString("dd/MM/yyyy")" class="form-control" readonly />
                    </dd>

                    <dt class="col-sm-3">Importe</dt>
                    <dd class="col-sm-9">
                        <input value="@Model.Importe.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-AR"))" class="form-control" readonly />
                    </dd>

                    <dt class="col-sm-3">Contrato</dt>
                    <dd class="col-sm-9">
                        <input value="@Model.IdContrato" class="form-control" readonly />
                    </dd>

                    <dt class="col-sm-3">Detalle</dt>
                    <dd class="col-sm-9">
                        <input value="@Model.Detalle" class="form-control" />
                    </dd>

                    <dt class="col-sm-3">Concepto</dt>
                    <dd class="col-sm-9">
                        <select asp-for="IdConcepto" asp-items="ViewBag.Conceptos" class="form-control"></select>
                        <span asp-validation-for="IdConcepto" class="text-danger"></span>
                    </dd>
                </dl>

                <div class="d-flex gap-2 mt-3">
                    <a class="btn btn-secondary" asp-action="Detalles" asp-route-id="@Model.IdPago">
                        <i class="bi bi-eye"></i> Ver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    <script src="~/js/pagos.js" asp-append-version="true"></script>
}
