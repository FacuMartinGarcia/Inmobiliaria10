@model IEnumerable<Inmobiliaria10.Models.Pago>
@{
    ViewData["Title"] = "Pagos";
}

<h2>Pagos</h2>

<p>
    <a class="btn btn-success" asp-action="Crear">Nuevo pago</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Contrato</th>
            <th>Fecha</th>
            <th>Concepto</th>
            <th>Importe</th>
            <th>Detalle</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model ?? Enumerable.Empty<Inmobiliaria10.Models.Pago>())
    {
        <tr>
            <td>@p.IdPago</td>
            <td>@p.IdContrato</td>
            <td>@p.FechaPago:yyyy-MM-dd</td>
            <td>@p.IdConcepto</td>
            <td>@p.Importe:0.00</td>
            <td>@p.Detalle</td>
            <td class="text-nowrap">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Detalles" asp-route-id="@p.IdPago">Ver</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Editar" asp-route-id="@p.IdPago">Editar</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Eliminar" asp-route-id="@p.IdPago">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
