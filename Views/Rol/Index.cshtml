@model IEnumerable<Inmobiliaria10.Models.Rol>
@{
    ViewData["Title"] = "Roles";
    Layout = "_Layout";
}

<h2 class="mb-3">Roles</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Crear" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> Nuevo Rol
    </a>
</div>

@if (Model is null || !Model.Any())
{
    <div class="alert alert-info">No se encontraron roles.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Denominaci√≥n</th>
                    <th style="width:220px;" class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var rol in Model)
            {
                <tr>
                    <td>@rol.IdRol</td>
                    <td>@rol.DenominacionRol</td>
                    <td class="text-end text-nowrap">
                        <a class="btn btn-sm btn-primary" asp-action="Editar" asp-route-id="@rol.IdRol" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Eliminar" asp-route-id="@rol.IdRol" title="Eliminar">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                        <a class="btn btn-sm btn-info" asp-action="Detalle" asp-route-id="@rol.IdRol" title="Detalle">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
